{
  "name": "vue-haptic",
  "version": "1.2.0",
  "description": "Flexible declarative haptics for Vue.js using navigator.vibrate",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.js",
  "types": "dist/types",
  "files": [
    "dist/**/*",
    "nuxt/**/*"
  ],
  "scripts": {
    "test": "exit 0",
    "build": "rollup --config",
    "dev": "npm run build -- --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justintaddei/vue-haptic.git"
  },
  "keywords": [
    "vue",
    "directive",
    "v-haptic",
    "haptic",
    "vibrate",
    "vibration",
    "UX"
  ],
  "author": "Justin Taddei <justin@justintaddei.com> (https://justintaddei.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/justintaddei/vue-haptic/issues"
  },
  "homepage": "https://github.com/justintaddei/vue-haptic#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/node": "^18.7.10",
    "husky": "^7.0.1",
    "prettier": "^2.1.2",
    "rollup": "^2.32.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-uglify": "^6.0.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3",
    "vue": "^2.6.12"
  }
}
